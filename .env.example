# Environment Variables Template
# Copy this file to .env and update with your actual values

# Application Configuration
BASE_URL=https://www.nike.com/vn
API_BASE_URL=

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=AdminPassword123!

# Test Configuration
HEADLESS=true
TIMEOUT=30000
RETRIES=1
SLOW_MO=0

# Browser Configuration
BROWSER=chromium
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720
BROWSER_TIMEOUT=30000

# Test Data
TEST_DATA_RESET=false
USE_REAL_DATA=false

# Reporting
GENERATE_REPORT=true
CAPTURE_VIDEO=retain-on-failure
CAPTURE_SCREENSHOT=only-on-failure

# CI/CD Configuration
CI=false
PARALLEL_WORKERS=4
TEST_ENV=dev

# Test Run Configuration (auto-generated by Docker scripts, don't set manually)
# RUN_TIME=2024-01-15T10-30-00

# Database Configuration (if needed)
TEST_DB_URL=mongodb://localhost:27017/test
TEST_DB_NAME=e2e_test_db

# Third-party Integrations
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# Security
API_TOKEN=your-api-token-here
JWT_SECRET=your-jwt-secret-here
